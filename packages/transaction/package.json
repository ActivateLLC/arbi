{
  "name": "@arbi/transaction",
  "version": "0.1.0",
  "private": true,
  "description": "Payment and security modules for Arbi",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "crypto": "^1.0.1",
    "openssl-nodejs": "^1.0.5"
  },
  "devDependencies": {
    "@arbi/eslint-config": "workspace:*",
    "@arbi/tsconfig": "workspace:*",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
