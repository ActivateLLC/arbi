{
  "name": "@arbi/voice-interface",
  "version": "0.1.0",
  "private": true,
  "description": "Voice processing capabilities for Arbi",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@picovoice/porcupine-node": "^3.0.2",
    "elevenlabs": "^4.0.5",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^4.90.0"
  },
  "devDependencies": {
    "@arbi/eslint-config": "workspace:*",
    "@arbi/tsconfig": "workspace:*",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
